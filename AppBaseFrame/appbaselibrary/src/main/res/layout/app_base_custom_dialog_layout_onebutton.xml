<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/app_base_color_white_round_bg"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="left"
        android:paddingLeft="16dp"
        android:maxLines="2"
        android:textColor="@color/app_base_black"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="title"
        android:visibility="visible" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        android:visibility="visible" />


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:maxHeight="120dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/app_base_line_spacing_extra"
        android:textColor="@color/app_base_black"
        tools:text="正文"
        android:textSize="12sp"
        android:scrollbars="vertical"
        />

    <TextView
        android:id="@+id/sure"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/app_base_white"
        android:background="@drawable/app_base_common_dialog_sure_bg"
        android:textSize="12sp"
        tools:text="确定"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>