<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/app_base_secondary_color" />
            <corners android:radius="@dimen/app_base_common_button_radius" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/app_base_secondary_color" />
            <corners android:radius="@dimen/app_base_common_button_radius" />
        </shape>
    </item>

    <item >
        <shape>
            <solid android:color="@color/app_base_main_color_black" />
            <corners android:radius="@dimen/app_base_common_button_radius" />
        </shape>
    </item>
</selector>