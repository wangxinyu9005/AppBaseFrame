<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:src="@mipmap/app_base_net_error"
        android:layout_height="100dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/app_base_text_gray"
        android:text="当前网络环境差，您可以刷新重试"/>

    <TextView
        android:id="@+id/refresh_net"
        android:layout_width="120dp"
        android:background="@drawable/app_base_btn_blue_frame_selector"
        android:textColor="@color/app_base_main_color_blue"
        android:text="刷新"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_height="44dp" />
</LinearLayout>